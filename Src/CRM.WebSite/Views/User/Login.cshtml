<!DOCTYPE html>
<html>
	<head>
		<meta name="viewport" content="width=device-width" />
		<title>Login</title>
		@Scripts.Render("~/bundles/jquery")
		@Scripts.Render("~/bundles/bootstrap")
		@Styles.Render("~/Content/css")
	</head>
<body>

	<div class="container">

		<div class="login-box col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">

			<div class="panel panel-info">

				<div class="panel-heading">
					<div class="panel-title login-title"><i class="fa fa-gears"></i><span>Sign In</span></div>
					<div class="login-recovery"><a href="/user/recovery">Password recovery</a></div>
				</div> <!-- /.panel-heading -->

				<div style="padding-top:30px" class="panel-body">

					<form class="login-form" role="form" method="POST" action="/user/login">
						
						@if (IsPost && !User.Identity.IsAuthenticated)
						{
							<div class="alert alert-danger" role="alert">Specified credentials are invalid.</div>
						}
						
						<div class="form-group">
							<div class="input-group">
								<label for="Email" class="input-group-addon input-icon"><i class="fa fa-envelope"></i></label>
								<input id="Email" name="Email" type="email" class="form-control" placeholder="Email address" required="" autofocus="">
							</div>
						</div> <!-- /.form-group -->

						<div class="form-group">
							<div class="input-group">
								<label for="Password" class="input-group-addon input-icon"><i class="fa fa-lock"></i></label>
								<input id="Password" name="Password" type="password" class="form-control" placeholder="Password" autofocus="">
							</div>
						</div> <!-- /.form-group -->

						<div class="checkbox">
							<label>
								<input id="rememberMe" name="RememberMe" type="checkbox" value="True"> Remember me
							</label>
						</div>

						<button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>

					</form>

				</div>

			</div> <!-- /.panel-info -->


		</div> <!-- /.row -->

	</div> <!-- /.container -->

</body>
</html>
